<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/statisticsFirstTeam"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_small"
            android:layout_marginStart="@dimen/layout_margin_small"
            android:padding="@dimen/layout_margin_small"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="25%" />

        <TextView
            android:id="@+id/teamStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_small"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_small"
            app:layout_constraintEnd_toStartOf="@+id/statisticsSecondTeam"
            app:layout_constraintStart_toEndOf="@+id/statisticsFirstTeam"
            tools:ignore="MissingConstraints,UnknownIdInLayout"
            tools:layout_editor_absoluteY="0dp"
            tools:text="Statistics" />

        <TextView
            android:id="@+id/statisticsSecondTeam"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_small"
            android:layout_marginEnd="@dimen/layout_margin_small"
            android:padding="@dimen/layout_margin_small"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="75%" />

        <View
            android:id="@+id/splitLine"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_divider_height"
            android:layout_marginStart="@dimen/layout_margin_small"
            android:layout_marginEnd="@dimen/layout_margin_small"
            android:background="@color/divider_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

