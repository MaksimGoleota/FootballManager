<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/playerPositionInTheList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_margin_small"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="1" />

    <TextView
        android:id="@+id/namePlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/totalMatches"
        app:layout_constraintStart_toEndOf="@+id/playerPositionInTheList"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Karim Benzema" />

    <TextView
        android:id="@+id/nameClub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_extra_small"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/totalMatches"
        app:layout_constraintStart_toEndOf="@+id/playerPositionInTheList"
        app:layout_constraintTop_toBottomOf="@+id/namePlayer"
        tools:ignore="MissingConstraints,UnknownIdInLayout"
        tools:text="Real Madrid" />

    <TextView
        android:id="@+id/totalNumberOfGoals"
        android:layout_width="@dimen/layout_medium"
        android:layout_height="@dimen/layout_medium"
        android:padding="@dimen/layout_margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12" />

    <TextView
        android:id="@+id/awayGoals"
        android:layout_width="@dimen/layout_small"
        android:layout_height="@dimen/layout_small"
        android:padding="@dimen/layout_margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/totalNumberOfGoals"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10" />

    <TextView
        android:id="@+id/totalMatches"
        android:layout_width="@dimen/layout_small"
        android:layout_height="@dimen/layout_small"
        android:padding="@dimen/layout_margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/homeGoals"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15" />

    <TextView
        android:id="@+id/homeGoals"
        android:layout_width="@dimen/layout_small"
        android:layout_height="@dimen/layout_small"
        android:padding="@dimen/layout_margin_small"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/awayGoals"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="72" />

    <View
        android:id="@+id/splitLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/layout_divider_height"
        android:layout_marginStart="@dimen/layout_margin_small"
        android:layout_marginEnd="@dimen/layout_margin_small"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
